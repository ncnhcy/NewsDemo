<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/iv_science_icon"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:src="@drawable/a4" />

    <TextView
        android:id="@+id/tv_science_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_science_icon"
        android:lines="2"
        android:text="新闻标题"
        android:textColor="#EEFFFFFF"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_science_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_science_title"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/iv_science_icon"
        android:text="新闻标题"
        android:textColor="#EEFFFFFF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tv_science_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/tv_science_title"
        android:layout_marginTop="4dp"
        android:text="2016-05-21"
        android:textColor="#EEFFFFFF"
        android:textSize="11dp" />

</RelativeLayout>